{
    "name": "account-source",
    "config": {
      "connector.class": "io.debezium.connector.mysql.MySqlConnector",
  		"tasks.max": "1",
  		"key.converter": "org.apache.kafka.connect.storage.StringConverter",
  		"value.converter": "org.apache.kafka.connect.json.JsonConverter",
  		"value.converter.schemas.enable": "false",
      "database.hostname": "mysql",
      "database.port": "3306",
      "database.user": "debezium",
      "database.password": "dbz",
      "database.server.id": "184054",
      "database.server.name": "dbserver1",
      "decimal.handling.mode": "string",
      "database.include.list": "heroes",
      "table.include.list": "heroes.account_details",
      "column.include.list": "heroes.account_details.active,heroes.account_details.name,heroes.account_details.pool_name,heroes.account_details.pool_account_id,heroes.account_details.start_amount",
      "database.history.kafka.bootstrap.servers": "my-cluster-kafka-bootstrap:9092",
      "database.history.kafka.topic": "schema-changes.heroes",
      "transforms": "reroute,unwrap,converter",
      "transforms.reroute.type": "io.debezium.transforms.ByLogicalTableRouter",
      "transforms.reroute.topic.regex": "dbserver1.heroes.account_details",
      "transforms.reroute.topic.replacement": "account",
      "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
      "transforms.unwrap.drop.tombstones": false,
      "transforms.converter.type": "guru.bonacci.kafka.connect.transform.AccountConverter"
    }
}
